<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimario</item>
        <item name="colorPrimaryDark">@color/colorOscuro</item>
        <item name="colorAccent">@color/colorAcento</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@color/colorPrimario</item>
        <item name="android:foreground">@color/blanco</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="colorAcento">#6A1B9A</color>
    <color name="colorOscuro">#33691E</color>
    <color name="colorPrimario">#7CB342</color>

    <style name="Datos" >
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">@dimen/datos</item>
    </style>
    <style name="DatosMini" >
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">@dimen/datosM</item>
    </style>
    <style name="DatosAct" >
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">@dimen/datos</item>
        <item name="android:padding">10dp</item>
    </style>
</resources>
